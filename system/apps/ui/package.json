{
  "name": "chirostretch",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "tokens:generate": "tsx scripts/generate-tokens.ts",
    "redirects:generate": "tsx scripts/generate-redirects.ts",
    "prebuild": "pnpm tokens:generate && pnpm redirects:generate",
    "predev": "pnpm tokens:generate",
    "dev": "next dev  --port 3000 --experimental-https",
    "build": "next build",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "pnpm run lint:js && pnpm run lint:css",
    "lint:js": "eslint",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:fix": "pnpm run lint:js -- --fix && pnpm run lint:css:fix",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "generate:demo": "pnpm exec tsx scripts/cms/seed/index.ts",
    "analyze": "ANALYZE=true next build",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "lighthouse": "lhci autorun",
    "algolia:reindex": "curl -X POST https://localhost:3000/api/algolia/index-products && curl -X POST https://localhost:3000/api/algolia/index-events && curl -X POST https://localhost:3000/api/algolia/index-articles && curl -X POST https://localhost:3000/api/algolia/index-locations"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@testing-library/react": "^16.3.2",
    "algoliasearch": "^5.47.0",
    "cloudinary-build-url": "^0.2.4",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "eslint-plugin-react-you-might-not-need-an-effect": "^0.8.5",
    "hamburger-react": "^2.5.2",
    "html-react-parser": "^5.2.15",
    "lucide-react": "^0.562.0",
    "motion": "^12.29.2",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-countup": "^6.5.3",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-instantsearch": "^7.23.0",
    "react-instantsearch-nextjs": "^1.0.12",
    "recharts": "^3.7.0",
    "server-only": "^0.0.1",
    "sharp": "^0.34.5",
    "swiper": "^12.1.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/client-preset": "^5.2.2",
    "@graphql-codegen/typescript": "^5.0.7",
    "@next/bundle-analyzer": "^16.1.6",
    "@parcel/watcher": "^2.5.6",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/seedrandom": "^3.0.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.18",
    "autoprefixer": "^10.4.24",
    "baseline-browser-mapping": "^2.9.19",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "graphql": "^16.12.0",
    "happy-dom": "^20.4.0",
    "next-gravity-forms": "^2.1.13",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^10.6.1",
    "seedrandom": "^3.0.5",
    "stylelint": "^17.1.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "volta": {
    "node": "20.18.0",
    "pnpm": "10.27.0"
  }
}
