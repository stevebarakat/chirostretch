#!/bin/sh
# Volta shim to ensure correct Node.js and pnpm versions
# This script ensures Volta is used when available

if command -v volta >/dev/null 2>&1; then
  # Volta is installed, use it to run the command with correct versions
  # Volta automatically handles version switching based on package.json
  exec "$@"
else
  # Volta is not installed, warn and continue
  echo "Warning: Volta is not installed. Please install Volta to ensure correct Node.js and pnpm versions." >&2
  echo "Expected: Node.js 20.18.0, pnpm 10.27.0" >&2
  echo "Install: curl https://get.volta.sh | bash" >&2
  exec "$@"
fi

